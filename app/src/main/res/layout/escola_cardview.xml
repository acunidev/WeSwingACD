<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pfp_escola"
            android:layout_width="70dp"
            android:layout_height="70dp"
            style="@style/RoundCorner"
            android:src="@drawable/we_swing_icon" />

        <TextView
            android:id="@+id/title_escola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pfp_escola"
            android:text="@string/nom_escola_placeholder"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc_escola"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_escola"
            android:layout_toEndOf="@id/pfp_escola"
            android:text="@string/descripcio_placeholder"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>